.b-registration__wrap
  display none
  &:first-child
    display block

.b-registration__inner
  padding 0 230px 0 170px

.b-registration__tabs-inner
  position relative
  float left
  width 170px
  margin 0 0 0 -170px

.b-registration__tabs
  margin 0
  padding 0
  list-style none

.b-registration__tabs-item
  margin 0
  padding 0 0 0 15px
  height 29px

  &._state_active
    .b-registration__tabs-link
      color #fff
      font-weight 400
  &._state_clickable
    .b-registration__tabs-link
      border-bottom 1px dashed
      cursor pointer
      &:hover
        color #fff

.b-registration__tabs-link
  display inline-block
  position relative
  top 6px
  text-decoration none
  color #787677
  font-size 16px
  transition .3s all

  &:hover
    color #787677

.b-registration__tabs-line
  position absolute
  top 0
  left 0
  width 3px
  height 29px
  background #fff
  transition .3s top

.b-registration__form-inner
  float left
  width 100%

.b-registration__form
  padding 50px 50px 20px 50px
  border-radius 4px 4px 0 0
  background #fff

.b-registration__foot
  padding 20px 50px
  border-radius 0 0 4px 4px
  background #f8f8f8
  border-top 1px solid #ececec

.b-registration__right
  float right
  width 230px
  margin 0 -230px 0 0

